generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @unique // firebase uid
  name      String
  birthday  DateTime
  bio       String   @default("Oii <3")
  gender    Gender
  // photos      Photo[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Ãndices para performance no feed
  @@index([gender, createdAt])
}

